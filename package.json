{
  "name": "expense-budget-manager",
  "private": true,
  "packageManager": "pnpm@8.15.4",
  "scripts": {
    "dev": "pnpm -r --parallel dev",
    "db:up": "docker compose -f infra/docker-compose.yml up -d",
    "db:down": "docker compose -f infra/docker-compose.yml down",
    "db:migrate": "pnpm --filter db migrate",
    "db:seed": "pnpm --filter db seed",
    "db:generate": "pnpm --filter db generate",
    "db:studio": "pnpm --filter db exec prisma studio",
    "lint": "pnpm -r lint"
  }
}
